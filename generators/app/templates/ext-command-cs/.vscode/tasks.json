{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "problemMatcher": {
                "owner": "coffee",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^(\\\\w*:*[^\\\\[:]+):(\\\\d+):(\\\\d+): error: (.*)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 4,
                        "severity": 4
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting",
                    "endsPattern": "Finished"
                }
            }
        }
    ]
}
